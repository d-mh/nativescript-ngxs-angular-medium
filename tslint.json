{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "array-type": [ true, "array" ],
        "no-empty": false,
        "quotemark": [ true, "single", "avoid-escape", "avoid-template" ],
        "trailing-comma": [ true, { "multiline": "always", "singleline": "never" } ],
        "max-line-length": [true, 120],
        "max-classes-per-file": false
    },
    "rulesDirectory": []
}
